<h1> Listing expenses </h1>

<table>
  <tr>
    <th>spentperson</th>
    <th>amount</th>
    <th>otherperson</th>
    <th>reason</th>
    <th>otherperson to spentperson </th>
  </tr>
  <%= @expenses.each do |expense| %>
  <tr>
    <td><%= expense.spentperson %></td>
    <td><%= expense.amount%></td>
    <td><%= expense.otherperson %></td>
    <td><%= expense.reason %></td>
    <td><%= expense.amount/2 %></td>
    <td><%= link_to 'Show', expense_path(expense) %></td>
    <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
    <td><%= link_to 'Destroy', expense_path(expense),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
      <% end %>
</table>
<%= link_to 'New expense', new_expense_path %><br>
